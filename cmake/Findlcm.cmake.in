find_program(LCM_GEN NAMES lcm-gen HINTS @CMAKE_INSTALL_PREFIX@/bin)
find_path(LCM_INCLUDE_DIR NAMES lcm/lcm.h HINTS @CMAKE_INSTALL_PREFIX@/include)
find_library(LCM_LIBRARY NAMES liblcm lcm HINTS @CMAKE_INSTALL_PREFIX@/lib)

set(LCM_LIBRARIES ${LCM_LIBRARY})
set(LCM_BINS ${LCM_GEN})
mark_as_advanced(LCM_BINS LCM_INCLUDE_DIR LCM_LIBRARIES)

include(FindPackageHandleStandardArgs)
FIND_PACKAGE_HANDLE_STANDARD_ARGS(lcm FOUND_VAR lcm_FOUND REQUIRED_VARS LCM_BINS LCM_INCLUDE_DIR LCM_LIBRARIES)
