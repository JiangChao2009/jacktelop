find_path(ROS_INCLUDE_DIR NAMES ros/ros.h PATHS @CMAKE_INSTALL_PREFIX@/include)
find_library(ROSCPP_LIBRARY NAMES roscpp PATHS @CMAKE_INSTALL_PREFIX@/lib)
find_library(ROSLZ4_LIBRARY NAMES roslz4 PATHS @CMAKE_INSTALL_PREFIX@/lib)
find_library(ROSTIME_LIBRARY NAMES rostime PATHS @CMAKE_INSTALL_PREFIX@/lib)
find_library(ROSCONSOLE_LIBRARY NAMES rosconsole PATHS @CMAKE_INSTALL_PREFIX@/lib)
find_library(ROSCPP_SERIALIZATION_LIBRARY NAMES roscpp_serialization PATHS @CMAKE_INSTALL_PREFIX@/lib)

set(ROS_LIBRARIES ${ROSCPP_LIBRARY} ${ROSLZ4_LIBRARY} ${ROSTIME_LIBRARY} ${ROSCONSOLE_LIBRARY} ${ROSCPP_SERIALIZATION_LIBRARY})

mark_as_advanced(ROS_INCLUDE_DIR ROS_LIBRARIES)

include(FindPackageHandleStandardArgs)
FIND_PACKAGE_HANDLE_STANDARD_ARGS(ros FOUND_VAR ros_FOUND REQUIRED_VARS ROS_INCLUDE_DIR ROS_LIBRARIES)
